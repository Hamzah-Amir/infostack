generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model content {
  id          String   @id default(cuid())
  title       String
  description String
  category    String
  source_url  String
  source      String
  article     String   @db.Text
  images      Json
  ai_summary  String?  @db.Text
  createdAt   DateTime @default(now())
}
